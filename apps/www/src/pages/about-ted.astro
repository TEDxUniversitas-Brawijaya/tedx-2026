      display: none; /* Safari and Chrome */
    }

    .carousel-image {
      height: auto;
      width: 80dvw;
      flex-shrink: 0;
      object-fit: cover;
      object-position: center;
      scroll-snap-align: center;
      filter: drop-shadow(20px 20px 0px rgba(0, 0, 0, 0.7));
      aspect-ratio: 1.43 / 1;
    }

