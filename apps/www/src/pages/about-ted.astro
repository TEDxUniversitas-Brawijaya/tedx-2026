        const sy = window.scrollY;
        heroText.style.transform = `translateY(${-sy * 0.1}px)`;
        house.style.transform = `translateY(${sy * 0.08}px)`;
      };

      let pRafId: number | null = null;
      window.addEventListener(
        "scroll",
        () => {
          if (pRafId !== null) {
            return;
          }
          pRafId = requestAnimationFrame(() => {
            applyParallax();
            pRafId = null;
          });
        },
        { passive: true }
      );

      applyParallax();
    })();

    // Static leaf containers scroll parallax
    (() => {
      const backContainer = document.querySelector<HTMLElement>(
        "#leaves-static-back"
      );
      const frontContainer = document.querySelector<HTMLElement>(
        "#leaves-static-front"
      );

      if (!(backContainer && frontContainer)) {
        return;
      }

      const applyLeafParallax = () => {
        const sy = window.scrollY;
        // Back layer moves slower (farther away)
        backContainer.style.transform = `translateY(${sy * 0.12}px)`;
        // Front layer moves faster (closer)
        frontContainer.style.transform = `translateY(${sy * 0.28}px)`;
      };

      let leafRafId: number | null = null;
      window.addEventListener(
        "scroll",
        () => {
          if (leafRafId !== null) {
            return;
          }
          leafRafId = requestAnimationFrame(() => {
            applyLeafParallax();
            leafRafId = null;
          });
        },
        { passive: true }
      );

      applyLeafParallax();
    })();
  </script>
